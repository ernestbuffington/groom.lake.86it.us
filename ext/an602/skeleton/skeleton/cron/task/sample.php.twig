namespace {{ EXTENSION.vendor_name }}\{{ EXTENSION.extension_name }}\cron\task;

/**
 * {{ EXTENSION.extension_display_name }} cron task.
 */
class sample extends \an602\cron\task\base
{
	/**
	 * How often we run the cron (in seconds).
	 * @var int
	 */
	protected $cron_frequency = 86400;

	/** @var \an602\config\config */
	protected $config;

	/**
	 * Constructor
	 *
	 * @param \an602\config\config $config Config object
	 */
	public function __construct(\an602\config\config $config)
	{
		$this->config = $config;
	}

	/**
	 * Runs this cron task.
	 *
	 * @return void
	 */
	public function run()
	{
		// Run your cron actions here...

		// Update the cron task run time here if it hasn't
		// already been done by your cron actions.
		$this->config->set('{{ EXTENSION.extension_name|lower }}_cron_last_run', time(), false);
	}

	/**
	 * Returns whether this cron task can run, given current board configuration.
	 *
	 * For example, a cron task that prunes forums can only run when
	 * forum pruning is enabled.
	 *
	 * @return bool
	 */
	public function is_runnable()
	{
		return true;
	}

	/**
	 * Returns whether this cron task should run now, because enough time
	 * has passed since it was last run.
	 *
	 * @return bool
	 */
	public function should_run()
	{
		return $this->config['{{ EXTENSION.extension_name|lower }}_cron_last_run'] < time() - $this->cron_frequency;
	}
}
